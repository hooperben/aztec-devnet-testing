{
  "preset": "ts-jest/presets/default-esm",
  "testRegex": "./.*\\.test\\.ts$",
  "rootDir": ".",
  "testTimeout": 30000,
  "transform": {
    "^.+\\.tsx?$": [
      "ts-jest",
      {
        "useESM": true
      }
    ]
  },
  "extensionsToTreatAsEsm": [".ts"],
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  },
  "testEnvironment": "node"
}
